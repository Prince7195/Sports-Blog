extends layout

block content
    .container
        h1 #{title}
        ul.errors
            if(errors)
                each error, i in errors
                    li.alert.alert-danger #{error.msg}
        form(action="/categories/edit/"+category._id, method="post")
            .form-group
                label Title:
                input(type="text", class="form-control", name="title", value=category.title)
            .form-group
                label Description:
                textarea(name="description", class="form-control", cols="30", rows="10") #{category.description}
            input(type="submit", class="btn btn-primary", name="submit", value="Update Category")
            a(href="/manage/categories", class="btn btn-default") Back
            a(href="/manage/categories", class="btn btn-danger category-delete pull-right", data-cat-id=category._id) Delete